<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dungzi.otovillnew" version="3" android-versionCode="3" xmlns="https://www.w3.org/ns/widgets"  xmlns:gap="https://phonegap.com/ns/1.0">
    <name>오투오빌</name>
    <description>	
        오투오빌
    </description>
    <author email="webplug@gmail.com" href="https://www.naver.com/">
        Dungzi Team
    </author>
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="android-minSdkVersion" value="15" />
	<preference name="android-targetSdkVersion" value="26" />
	<preference name="fullscreen" value="true" />
	
	

	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<gap:plugin name="cordova-plugin-inappbrowser" source="npm"  />
	
	<allow-navigation href="*" />
	<icon src="icon.png" />
	<content src="https://otovill.dungzi.com/mobile" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="sms:*" />
	<allow-intent href="tel:*" />




</widget>
