<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dungzi.otovillnew" version="3" android-versionCode="3" xmlns="https://www.w3.org/ns/widgets"  xmlns:gap="https://phonegap.com/ns/1.0">
    <name>오투오빌</name>
    <description>	
        오투오빌
    </description>
    <author email="webplug@gmail.com" href="https://www.naver.com/">
        Dungzi Team
    </author>
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="android-minSdkVersion" value="15" />
	<preference name="android-targetSdkVersion" value="26" />
	<preference name="fullscreen" value="true" />
	
	<plugin name="cordova-plugin-secure-http" />
	<plugin name="cordova-plugin-inappbrowser" spec="3.0.0" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.4" />
	
	<allow-navigation href="*" />
	<icon src="icon.png" />
	<content src="index.html" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="sms:*" />
	<allow-intent href="tel:*" />

</widget>
